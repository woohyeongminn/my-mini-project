<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.woo.pms.dao.UserDao">
  
  <resultMap type="User" id="UserMap">
    <id column="user_no" property="no"/> 
    <result column="name" property="name"/>
    <result column="nickname" property="nickname"/>
    <result column="email" property="email"/>
    <result column="password" property="password"/>
    <result column="photo" property="photo"/>
    <result column="tel" property="tel"/>
    <result column="join_dt" property="joinDate"/>
    <result column="active" property="activityState"/>
  </resultMap>
  
  <sql id="select1">
    select
      u.name,
      u.nickname,
      u.email,
      u.photo,
      u.tel,
      u.join_dt,
      u.active
    from
      user u  
  </sql>

<!-- ======================================================================= -->  
  <insert id="insert" parameterType="user">
    insert into user(name,nickname,email,password,tel,photo)
    values(#{name},#{nickname},#{email},password(#{password}),#{tel},#{photo})
  </insert>
  
  <update id="updateNickname" parameterType="user">
    update user set
      nickname=#{nickname}
    where
      user_no=#{no}    
  </update>
  
  <update id="updatePhoto" parameterType="user">
    update user set
      photo=#{photo}
    where
      user_no=#{no}    
  </update>  

  <update id="updatePassword" parameterType="user">
    update user set
      password=password(#{photo})
    where
      user_no=#{no}    
  </update> 
  
<!-- =========================탈퇴시 상태변경===================== -->
  <update id="updateActive" parameterType="user">
    update user set
      active=2
    where
      user_no=#{no}    
  </update> 

<!-- 닉네임 중복 확인하기  -->
	<select id="nickOverlap" resultType="string">
	  select
	    nickname
	  from
	    user
	  where
	    nickname = #{nickname}
	</select>   
	
	<select id="findAll" resultMap="UserMap">
   <include refid="select1"/>
  </select>
      
  <select id="findByNo" resultMap="UserMap">
   <include refid="select1"/>
   where
     user_no = #{no}
  </select>
  
  <select id="findByEmailAndPassword" resultMap="UserMap">
   <include refid="select1"/>
   where
     email = #{email} and password = password(#{password})
  </select>
  
  <select id="findEmailByNameAndTel" resultMap="UserMap">
   <include refid="select1"/>
   where
     name = #{name} and tel = #{tel}
  </select> 
  
  <select id="findByNameAndEmail" resultMap="UserMap">
   <include refid="select1"/>
   where
     name = #{name} and email = #{email}
  </select>         	 


</mapper>







