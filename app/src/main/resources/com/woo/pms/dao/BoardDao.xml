<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.woo.pms.dao.BoardDao">
  
 <resultMap type="Board" id="BoardMap">
	  <id column="board_no" property="no"/>
	  <result column="title" property="title"/>
	  <result column="content" property="content"/>
	  <result column="view_count" property="viewCount"/>
	  <result column="registered_dt" property="createDate"/>
	  
	  <association property="writer" javaType="User">
    <id column="user_no" property="no"/> 
    <result column="nickname" property="nickname"/>
    <result column="active" property="activityState"/>
    
    </association> 
 
 </resultMap>
 
 <sql id="select1">
     select 
       b.board_no,
       b.title,
       b.content,
       b.view_count,
       b.registered_dt,
       u.nickname,
       u.active
 </sql>   
 
<!-- ========================================================================= --> 

  <insert id="insert" parameterType="Board">
    insert into board(title,content,view_count,user_no)
    values(#{title},#{content},#{viewCount},#{writer.no})
  </insert> 
  
   <update id="updateTitle" parameterType="Board">
   update board set
     title=#{title}
   where
     board_no=#{no}    
   </update> 	
   
   <update id="updateContent" parameterType="Board">
   update board set
     content=#{content}
   where
     board_no=#{no}    
   </update>     
   
   <update id="updateViewCount" parameterType="int">
     update board set
       view_count= view_count + 1
     where board_no=#{no}
   </update> 
   
  <delete id="delete" parameterType="int">
    delete from board
    where board_no=#{no}
  </delete> 
  
<!-- ========================================================================= -->      

  <select id="findByNo" resultMap="BoardMap" parameterType="int">
    <include refid="select1"/>
      from
         board b
      left outer join user u on u.user_no=b.user_no  
      where
         b.board_no=#{boardNo}      
  </select>
  
  <select id="findAll" resultMap="BoardMap" parameterType="map">
	  <include refid="select1"/>
	    from
	       board b
	    left outer join user u on u.user_no=b.user_no  
			order by
			   b.board_no desc
	       limit #{offset}, #{length}		   
  </select>
  
  <select id="count" resultType="int">
     select
       count(*)
     from board b
       left outer join user u on u.user_no=b.user_no
  </select>  

